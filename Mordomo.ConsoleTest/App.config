<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 -->
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=4.4.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />

    <!-- Unity -->
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
  </configSections>

  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">

    <containers>
      <container>
        <types>
          <register type="Mordomo.Business.Repository.IRepositoryFactory, Mordomo.Business"
                    mapTo="Mordomo.Data.RepositoryFactory, Mordomo.Data" name="RepositoryFactory" />

          <register type="Mordomo.Business.IUser, Mordomo.Business" mapTo="Mordomo.Business.User, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.ICreditCard, Mordomo.Business" mapTo="Mordomo.Business.CreditCard, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.ICreditCardType, Mordomo.Business" mapTo="Mordomo.Business.CreditCardType, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.IMenu, Mordomo.Business" mapTo="Mordomo.Business.Menu, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.IMenuItem, Mordomo.Business" mapTo="Mordomo.Business.MenuItem, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.IPage, Mordomo.Business" mapTo="Mordomo.Business.Page, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>

          <register type="Mordomo.Business.IBreadcrumb, Mordomo.Business" mapTo="Mordomo.Business.Breadcrumb, Mordomo.Business">
            <constructor>
              <param name="repFactory">
                <dependency name="RepositoryFactory" />
              </param>
            </constructor>
          </register>
        </types>
      </container>
    </containers>
  </unity>

  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="v11.0" />
      </parameters>
    </defaultConnectionFactory>
  </entityFramework>
  <connectionStrings>
    <add name="Mordomo"
			 connectionString="Server=localhost; Database=Mordomo; Uid=root; Pwd=root;"
			 providerName="MySql.Data.MySqlClient"/>
    <add name="Mordomo2"
			 connectionString="Server=.;Database=mordomo;Trusted_Connection=True;"
			 providerName="System.Data.SqlClient"/>
  </connectionStrings>
</configuration>